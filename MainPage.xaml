<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dawidek.MainPage">

    <Grid BackgroundColor="#f0f0f0">
        <Button x:Name="StartButton"
                Text="Start Game"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="StartGame"
                Padding="20,10"
                FontSize="18"
                BackgroundColor="DodgerBlue"
                TextColor="White"/>

        <VerticalStackLayout x:Name="PuzzleLayout"
                             IsVisible="False"
                             BackgroundColor="White"
                             Padding="20"
                             Margin="20"
                             HeightRequest="300"
                             WidthRequest="320"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

            <Label x:Name="PuzzleQuestion"
                   Text="Solve this puzzle!"
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

            <Entry x:Name="PuzzleAnswer"
                   Placeholder="Your answer here"
                   FontSize="16"
                   HorizontalOptions="Fill"
                   Margin="0,0,0,20"/>

            <Button Text="Submit"
                    Clicked="SubmitAnswer"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="150"/>

            <Label x:Name="IncorrectAnswerLabel" 
                   Text="Incorrect Answer, try again" 
                   TextColor="Red" 
                   IsVisible="False" 
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

            <Label x:Name="FindPasswordLabel" 
                   IsVisible="False" 
                   Text="Find the password" 
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

            <Button x:Name="WarningEmojiButton" 
                    IsVisible="False" 
                    Text="⚠️" 
                    Clicked="WarningEmojiClicked" 
                    BackgroundColor="Black" 
                    TextColor="White" 
                    HorizontalOptions="End" 
                    VerticalOptions="End"
                    WidthRequest="40"
                    HeightRequest="40"
                    Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <Grid x:Name="MemoryGridLayout" 
              IsVisible="False"
              RowDefinitions="Auto,*,*,*,*"
              ColumnDefinitions="*,*,*,*"
              RowSpacing="5"
              ColumnSpacing="5"
              Padding="15"
              Margin="20"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              BackgroundColor="White">
            <!-- Memory game content will be added programmatically -->
        </Grid>

        <Border x:Name="TimerBorder"
                IsVisible="False"
                BackgroundColor="#80000000"
                StrokeShape="RoundRectangle 10,10,10,10"
                Padding="10,5"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Margin="0,10,0,0">
            <HorizontalStackLayout Spacing="5">
                <Label Text="⏱️"
                       FontSize="20"
                       VerticalOptions="Center"/>
                <Label x:Name="TimerLabel"
                       Text="Time Left: 60"
                       FontSize="20"
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Border>

        <BoxView x:Name="TimerBar"
                 BackgroundColor="Green"
                 HeightRequest="10"
                 HorizontalOptions="Center"
                 VerticalOptions="Start"
                 Margin="0,50,0,0"
                 IsVisible="False"/>

        <VerticalStackLayout x:Name="SuccessLayout" 
                             IsVisible="False" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Center"
                             BackgroundColor="White"
                             Padding="20"
                             Margin="20">
            <Label Text="Congratulations! You Escaped" 
                   FontSize="22" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            <Label x:Name="TimeTakenSuccessLabel" 
                   Text="Time Taken: " 
                   HorizontalOptions="Center"
                   FontSize="16"/>
            <Button Text="Play Again" 
                    Clicked="StartGame"
                    BackgroundColor="Green"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>

        <VerticalStackLayout x:Name="GameOverLayout" 
                             IsVisible="False" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Center"
                             BackgroundColor="White"
                             Padding="20"
                             Margin="20">
            <Label Text="Game Over! Time's Up" 
                   FontSize="22" 
                   FontAttributes="Bold"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            <Label x:Name="TimeTakenLabel" 
                   Text="Time Taken: " 
                   HorizontalOptions="Center"
                   FontSize="16"/>
            <Button Text="Try Again" 
                    Clicked="StartGame"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>